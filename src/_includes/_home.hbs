<section id="home" class="s-home target-section" data-parallax="scroll" data-image-src="../assets/images/hero-bg.jpg"
    alt="background" data-natural-width="3000" data-natural-height="2000" data-position-y="center"
    alt="background image, space">
    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    <div class="home-content">
        <div class="row home-content__main">
            <h3 lang="{{ lang }}">{{ home.h3 }}</h3>

            <h2 lang="{{ lang }}">
                {{{ home.h2 }}}
            </h2>

            <div class="home-content__buttons">
                <a href="#contact" class="smoothscroll btn btn--stroke">
                    {{ home.contact }}
                </a>
                <a href="#about" class="smoothscroll btn btn--stroke">
                    {{ home.about }}
                </a>
            </div>
        </div>

        <div class="home-content__scroll">
            <a href="#about" class="scroll-link smoothscroll">
                <span>{{ home.down }}</span>
            </a>
        </div>

        <div class="home-content__line"></div>
    </div>
    <!-- end home-content -->
    <!-- home-social -->
    <ul class="home-social">
        <li>
            <a href="{{ data.fb }}" alt="Facebook" aria-label="Facebook"><i class="fa fa-facebook" aria-hidden="true"
                    alt="Facebook"></i><span>Facebook</span></a>
        </li>
        <li>
            <a href="{{ data.insta }}" alt="Instagram" aria-label="Instagram"><i class="fa fa-instagram"
                    aria-hidden="true" alt="Instagram"></i><span>Instagram</span></a>
        </li>
    </ul>
    <!-- end home-social -->
</section>
<!-- end s-home -->