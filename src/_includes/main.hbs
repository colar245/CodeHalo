<!DOCTYPE html>
<!--[if lt IE 9]><html class="no-js oldie" lang="{{ lang }}"> <![endif]-->
<!--[if IE 9]><html class="no-js oldie ie9" lang="{{ lang }}"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!-->
<html class="no-js" lang="{{ lang }}">
<!--<![endif]-->

<head>
    <!--- basic page needs
    ================================================== -->
    <meta charset="UTF-8" />
    <title lang="{{ lang }}">{{ title }}</title>
    <meta name="robots" content="index, follow">
    <meta name="author" content="https://github.com/colar245" />
    <meta name="description" content="{{{ desc }}}" />
    <meta name="keywords" content="{{ keywords }}" />

    <!-- hreflang
    ================================================== -->
    <link rel="alternate" hreflang="en" href="{{ data.url }}/en/" />
    <link rel="alternate" hreflang="sr" href="{{ data.url }}/sr/" />
    <link rel="alternate" hreflang="x-default" href="{{ data.url }}/" />

    <!-- mobile specific metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="../assets/css/main.css" />

    <!-- favicons
    ================================================== -->
    <link rel="shortcut icon" href="../assets/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="../assets/favicon.ico" type="image/x-icon" />

    <!-- Fonts
    ===================================================-->
    <link rel="preload" href="../assets/fonts/montserrat/montserrat-medium-webfont.woff2" as="font" type="font/woff2"
        crossorigin="anonymous" />
    <link rel="preload" href="../assets/fonts/montserrat/montserrat-semibold-webfont.woff2" as="font" type="font/woff2"
        crossorigin="anonymous" />
    <link rel="preload" href="../assets/fonts/montserrat/montserrat-regular-webfont.woff2" as="font" type="font/woff2"
        crossorigin="anonymous" />
    <link rel="preload" href="../assets/fonts/montserrat/montserrat-bold-webfont.woff2" as="font" type="font/woff2"
        crossorigin="anonymous" />
    <link rel="preload" href="../assets/fonts/montserrat/montserrat-light-webfont.woff2" as="font" type="font/woff2"
        crossorigin="anonymous" />
    <link rel="preload" href="../assets/fonts/lora/lora-regular-webfont.woff2" as="font" type="font/woff2"
        crossorigin="anonymous" />
    <link rel="preload" href="../assets/fonts/lora/lora-italic-webfont.woff2" as="font" type="font/woff2"
        crossorigin="anonymous" />

    <!-- script
    ================================================== -->
    <script src="../assets/js/modernizr.js"></script>
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:image" content="../assets/images/ogImage.jpg" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{{ desc }}}" />
    <meta property="og:site_name" content="Code Halo" />
    <meta property="og:url" content="{{ data.url }}/{{ lang }}" />
    <link rel="canonical" href="{{ data.url }}/" />
    <!-- JSON-LD -->
    <script type="application/ld+json">
        {
        "@context" : "http://schema.org",
        "@type" : "LocalBusiness",
        "name" : "Code Halo",
        "image" : "https://codehalo.netlify.app/assets/images/logo.png",
        "telephone" : "{{ data.phone }}",
        "email" : "{{ data.email }}"
        }
    </script>
</head>

<body id="top" lang="{{ lang }}">
    <!-- header
    ================================================== -->
    {{> _header }}

    <!-- home
    ================================================== -->
    {{> _home }}

    <!-- about
    ================================================== -->
    {{> _about }}

    <!-- services
    ================================================== -->
    {{> _services }}

    <!-- contact
    ================================================== -->
    {{> _contact }}

    <!-- footer
    ================================================== -->
    {{> _footer }}

    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader">
            <div class="line-scale-pulse-out">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </div>

    <!-- Java Script -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="../assets/js/plugins.js"></script>
    <script src="../assets/js/main.js"></script>

    <!-- Fontawesome CDN -->
    <script src="https://kit.fontawesome.com/3f7f7bdb28.js" crossorigin="anonymous"></script>
</body>

</html>